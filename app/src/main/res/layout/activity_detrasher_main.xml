<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation = "portrait"
    android:background="@color/pureWhite"
    tools:context="edu.scu.detrasher.DetrasherMainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/trashCan"
                    android:layout_width="186dp"
                    android:layout_height="186dp"
                    app:srcCompat="@drawable/icon1"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="16dp" />

                <ImageView
                    android:id="@+id/sWasteLocator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icon2"
                    tools:layout_editor_absoluteX="201dp"
                    tools:layout_editor_absoluteY="16dp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/recycleBin"
                android:layout_width="186dp"
                android:layout_height="182dp"
                app:srcCompat="@drawable/icon3"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="202dp" />

            <ImageView
                android:id="@+id/junkManager"
                android:layout_width="182dp"
                android:layout_height="182dp"
                app:srcCompat="@drawable/icon4"
                tools:layout_editor_absoluteX="200dp"
                tools:layout_editor_absoluteY="202dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
